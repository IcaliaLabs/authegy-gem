<p id="notice"><%= notice %></p>

<h1>Group Posts</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_posts.each do |group_post| %>
      <tr>
        <td><%= group_post.group %></td>
        <td><%= group_post.author %></td>
        <td><%= group_post.title %></td>
        <td><%= group_post.body %></td>
        <td><%= link_to 'Show', group_post %></td>
        <td><%= link_to 'Edit', edit_group_post_path(group_post) %></td>
        <td><%= link_to 'Destroy', group_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group Post', new_group_post_path %>
