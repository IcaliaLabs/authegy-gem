<p id="notice"><%= notice %></p>

<h1>Group Posts</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.group.name %></td>
        <td><%= post.author.first_name %> <%= post.author.last_name %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', group_post_path(post.group, post) %></td>
        <td><%= link_to 'Edit', edit_group_post_path(post.group, post) %></td>
        <td><%= link_to 'Destroy', group_post_path(post.group, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group Post', new_group_post_path(params[:group_id]) %>
